@Html.Hidden("idPedido", ((int?)ViewBag.Id ?? 0).ToString())

<div class="card shadow-sm mb-3">
    <div class="card-header">
        <h5 class="mb-0">@ViewData["Title"]</h5>
    </div>

    <div class="card-body mb-3">
        <div class="mb-3">
            @Html.Partial("~/Views/PartialView/ClienteAutocomplete.cshtml")
        </div>
    </div>
    <div class="card-body mb-3">
        <div class="row mb-3" id="pnlAdicionar">
            <div class="col-4">
                @Html.Partial("~/Views/PartialView/ProdutoAutocomplete.cshtml")
            </div>
            <div class="col-4">
                <label for="inpQuantidade">Quantidade</label>
                <input type="number" id="inpQuantidade" class="form-control" />
            </div>
            <div class="col-4">
                <button type="button" id="btnAdicionar" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i> Adicionar
                </button>
            </div>
        </div>

        <div class="table-responsive p-3">
            <table id="tableItem" class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Produto</th>
                        <th>Quantidade</th>
                        <th>Valor Unitário</th>
                        <th class="text-center" style="width: 140px;">Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div class="card shadow-sm">
    <div class="card-body mb-3">
        <div class="d-flex justify-content-between">
            <a id="btnVoltar" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            <button type="button" id="btnSalvar" class="btn btn-success">
                <i class="fas fa-save me-1"></i> Salvar
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/Views/Pedido/Pedido_Cadastro.js"></script>
}
