@{
    ViewData["Title"] = "Pedidos";
}


<div class="card shadow-sm">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col-12 mb-2">
                <h5 class="mb-0">Clientes</h5>
            </div>
            <div class="col-4 mb-2 ">
                @Html.Partial("~/Views/PartialView/ClienteAutocomplete.cshtml")
            </div>
            <div class="col-4 mb-2 ">
                <label for="dropStatus">Status</label>
                <select id="dropStatus" class="form-control">
                    <option value="null">Todos</option>
                    <option value="0">Novo</option>
                    <option value="1">Processando</option>
                    <option value="2">Finalizado</option>
                </select>
            </div>
            <div class="col-4 text-end">
                <a asp-action="Create" class="btn btn-primary me-2 mb-1">
                    <i class="fas fa-plus me-1"></i> Novo Pedido
                </a>
                <button id="btnPesquisar" class="btn btn-secondary mb-1">
                    <i class="fas fa-search me-1"></i> Pesquisar
                </button>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive p-3">
            <table id="tablePesquisa" class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Cliente</th>
                        <th>Data</th>
                        <th>Valor Total</th>
                        <th>Status</th>
                        <th class="text-center" style="width: 140px;">Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalProcessar" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h4 class="text-center">Aviso</h4>
            </div>
            <div class="modal-body" style="text-align:center">
                <input type="hidden" id="inpPedidoId" />
                <p id="txtModal">
                    Deseja realmente processar o pedido?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnFechar" class="btn btn-sm btn-secondary" data-dismiss="modal" onclick="FecharModal()"><i class="fas fa-times"></i> Não</button>
                <button type="button" id="btnConfirmar" class="btn btn-sm btn-success"><i class="fas fa-check-circle"></i> Sim</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/js/Views/Pedido/Pedido_Index.js"></script>
}
