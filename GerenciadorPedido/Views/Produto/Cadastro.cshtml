@model GerenciadorPedido.Application.ViewModel.ProdutoModel

@{
    var isEdicao = Model is not null;
    ViewData["Title"] = isEdicao ? "Editar Produto" : "Novo Produto";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">@ViewData["Title"]</h5>
    </div>

    <div class="card-body">
        <form id="formProduto">
            <input type="hidden" id="inpId" value="@Model?.Id" />

            <div class="mb-3">
                <label for="inpNome" class="form-label">Nome</label>
                <input type="text" id="inpNome" class="form-control" value="@Model?.Nome" />
                <div class="invalid-feedback">Campo obrigatório.</div>
            </div>

            <div class="mb-3">
                <label for="inpDescricao" class="form-label">Descrição</label>
                <textarea id="inpDescricao" class="form-control">@Model?.Descricao</textarea>
                <div class="invalid-feedback">Campo obrigatório.</div>
            </div>

            <div class="mb-3">
                <label for="inpPreco" class="form-label">Preço</label>
                <input type="text" id="inpPreco" class="form-control" value="@Model?.Preco.ToString("N2")" />
                <div class="invalid-feedback">Informe um preço válido.</div>
            </div>

            <div class="mb-3">
                <label for="inpQuantidade" class="form-label">Quantidade em Estoque</label>
                <input type="number" id="inpQuantidade" class="form-control" value="@Model?.QuantidadeEstoque" />
                <div class="invalid-feedback">Informe uma quantidade válida.</div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="button" id="btnSalvar" class="btn btn-success">
                    <i class="fas fa-save me-1"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js//Views/Produto/Produto_Cadastro.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
