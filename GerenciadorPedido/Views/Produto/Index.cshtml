@model IEnumerable<GerenciadorPedido.Application.ViewModel.ProdutoModel>

@{
    ViewData["Title"] = "Produtos";
}

<div class="card shadow-sm">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col-md-4 col-12 mb-2 mb-md-0">
                <h5 class="mb-0">Produtos</h5>
            </div>
            <div class="col-md-4 col-12 mb-2 mb-md-0">
                <input type="text" class="form-control" id="inpDescricao" placeholder="Nome" />
            </div>
            <div class="col-md-4 col-12 text-md-end text-start">
                <a asp-action="Create" class="btn btn-primary me-2 mb-1">
                    <i class="fas fa-plus me-1"></i> Novo Produto
                </a>
                <button id="btnPesquisar" class="btn btn-secondary mb-1">
                    <i class="fas fa-search me-1"></i> Pesquisar
                </button>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table id="tablePesquisa" class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Quantidade em Estoque</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
</div>
@section Scripts {
    <script type="text/javascript" src="~/js/Views/Produto/Produto_Index.js"></script>

}