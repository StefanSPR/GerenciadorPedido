@model GerenciadorPedido.Application.ViewModel.ClienteModel

@{
    var isEdicao = Model is not null;
    ViewData["Title"] = isEdicao ? "Editar Cliente" : "Novo Cliente";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">@ViewData["Title"]</h5>
    </div>

    <div class="card-body">
        <form asp-action="@(isEdicao ? "Edit" : "Create")" method="post">
            @if (isEdicao)
            {
                <input type="hidden" asp-for="Id" />
            }

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefone" class="form-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-1"></i> @(isEdicao ? "Salvar" : "Cadastrar")
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
